<%- include('../partials/header', {title:"TSPN"}, {data:data}, {userData: userData} ) -%>

<% if (user) { %>
<h2>Welcome, <%=user._json.email.split("@")[0]%>!</h2>

<form action="/highlights/uploadText" method="POST">
  <label for="upcominggames"> Which Upcoming Game?:</label>
  <select id="game" name="game">

    <% for (sport in data) { %>
      <% if((userData[user._json.email]["sport"] == sport)||(userData[user._json.email]["sport"] == 'admin')) { %>
      <% for (team in data[sport]) { %>
        <% for (let i = 0; i < data[sport][team]["UpcomingGames"].length; i++) { %>
    <option value="<%=sport%>|<%=team%>|<%=data[sport][team]["UpcomingGames"][i]%>"> <%=sport%> <%=team%> <%=data[sport][team]["UpcomingGames"][i]%></option>
    <%}}}}%>
    </select>
    <br><br><br>
  <label for="Game Information"> Game Information:</label>
  <input class="lead" type="text" id="information" name="information" value="">
  <br><br>
  <input class="lead" type="submit" value="Upload Game Information!">

</form>

<% } %>
<%- include('../partials/footer') -%>
