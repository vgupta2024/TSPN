<% if (user) { %>
<%- include('partials/header', {title:"TSPN"}, {data:data}, {userData: userData} ) -%>
<% } else { %>

  <% } %>
<script src ="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
<script src ="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/js/bootstrap-datetimepicker.min.js"></script>
<link rel ="stylesheet" href ="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.7.14/css/bootstrap-datetimepicker.min.css">
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

<style>
  .mainText {
    color: blue;
    font-family: Georgia;
    font-weight: bold;
    border: 1px solid black;
  }
  </style>
<% if (user) { %>
 <h1 class = "mainText">  HIGHLIGHTS  </h1>
<% for (video in videoNames) { %>
  <video width="320" height="300" controls>
    <source src= "/videos/<%=videoNames[video]['filename']%>" type="video/mp4"/>
  </video>
    <%  if (userData[user._json.email]["privileges"].includes('admin')) { %>
  <h5 style = "font-size: 2em;"><a href="/HighlightDelete/<%=videoNames[video]["filename"] %>"><i class="material-icons"">&times;</i></a> </h5>
<% }} %>
<br><br><br><br>
<% for (image in imageNames) { %>
  <img src= "/images/<%=imageNames[image]['filename']%>" alt="<%=imageNames[image]['originalName']%>" width = "400" height = "400"/>
	<a href="/ImageDelete/<%=image%>"><i class="material-icons">&#x2421;</i></a>
<% } %>
<br>
 <h1 class = "mainText"> UPCOMING GAMES </h1>
<br><br><br><br>
<body>

  <% for (sport in data) { %>
    <% for (gender in data[sport]) { %>
      <% if (data[sport][gender]["UpcomingGames"].length > 0) { %>
      <h2> <%= gender %> <%= sport %>: </h2>
      <% if (sport != "Cross Country") { %>
        <div id="carouselID-<%= gender %>-<%= sport %>" class="carousel slide" data-ride="carousel">
          <% } else { %>
            <div id="carouselID-<%= gender %>-<%= sport.split(" ")[0] %>" class="carousel slide" data-ride="carousel">
              <% } %>
            <div class="carousel-inner">
<% for (let games in data[sport][gender]["UpcomingGames"]) { %>
<%  if (games == 0 ) { %>
<div class="carousel-item active">
<% } else { %>
<div class="carousel-item">
<% } %>
 <img src="/logos/TSPN.png" alt="Chicago" width="100" height="200">
<div class = "carousel-caption" style = "color: red;">
<%=gender%> <%=sport%>: <%=data[sport][gender]["UpcomingGames"][games]%>
</br></br>
<p><%=data[sport][gender]["GameInfo"][games]%></p>
</div>
</div>
<% } %>
</div>

<% if (sport != "Cross Country") { %>
<a class="carousel-control-prev" href="#carouselID-<%= gender %>-<%= sport %>" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselID-<%= gender %>-<%= sport %>" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% } else { %>
  <a class="carousel-control-prev" href="#carouselID-<%= gender %>-<%= sport.split(" ")[0] %>" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselID-<%= gender %>-<%= sport.split(" ")[0] %>" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% }}}} %>

<%}else{ %>
  <style>
  .login {
    width:1500px;
    height: 1500px;
    background: red;
    position: relative;
    animation-name: login;
    animation-duration: 3s;
    animation-delay: .5s;
    animation-fill-mode: both;
    font-size:30px;
    text-align: center;
    font-family: Monospace;
  }

.images {
  position: relative;
  animation-name: imgMove;
    animation-duration: 3s;
    animation-delay: .5s;
    animation-fill-mode: both;
}

.carousel-caption {
color: red;
}

@keyframes imgMove {
  from {left: 0px; width: 100px;}
  to {left: 675px; width: 500px;}
}
  @keyframes login {
    from {top: 0px; background-color: blue;}
    to {top: 50px; background-color: yellow;}
  }
  </style>
  <div class = "images"> <img src="/logos/TSPN.png" width="100px"/> </div>
  <div class = "login"> <a href="/login"> <br><br><br><br><br><br><br><br>Click to login</a></div>
    <% }%>

</body>




